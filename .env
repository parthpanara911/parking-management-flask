FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-for-development-only
DATABASE_URL=mysql+pymysql://username:password@localhost/smart_parking

# Email Configuration
# For Gmail: Create an app password at https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-actual-email@gmail.com
MAIL_PASSWORD=your-app-password-from-google
MAIL_USE_TLS=True
MAIL_DEFAULT_SENDER=your-actual-email@gmail.com

# Development Settings
# Set to False to disable email verification during development
REQUIRE_EMAIL_VERIFICATION=False
BASE_URL=http://localhost:5000
# Enable debugging to use the development-only features
DEBUG=True

# Admin Configuration
ADMIN_EMAIL=admin@example.com
